<Page x:Class="Examen_Erohin.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Examen_Erohin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Login" Margin="10,0,0,0"></TextBlock>
            <TextBox x:Name="tlogin"></TextBox>
            <TextBlock Text="Password" Margin="10,0,0,0"></TextBlock>
            <TextBox x:Name="tpass"></TextBox>
            <Button x:Name="btn_login" Content="Войти" Click="btn_login_Click"></Button>
            <Button x:Name="btn_guest" Content="Войти как гость" Click="btn_guest_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
